@{
    ViewData["Title"] = "Delete";
}
<h1>Delete</h1>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4 id="petHeading">Pet</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id:
        </dt>
        <dd class="col-sm-10" id="petId">
        </dd>
        <dt class="col-sm-2">
            Name:
        </dt>
        <dd class="col-sm-10" id="petName">
        </dd>
        <dt class="col-sm-2">
            Weight:
        </dt>
        <dd class="col-sm-10" id="petWeight">
        </dd>
    </dl>
    <form asp-action="Delete" id="formPetDelete">
        <input id="id" name="id" value="" type="hidden" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
@section Scripts{
    <script src="~/js/petDelete.js" type="module" defer></script>
}